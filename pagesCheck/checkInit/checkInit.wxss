/* pagesCheck/checkInit/checkInit.wxss */
.btnWrap{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.btn{
  width: 80vw;
  height: 100rpx;
  background: #e1000f;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
}
.one-btn{
  margin-bottom:80rpx;
}
.messageBox{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  box-sizing: border-box;
  width: 90vw;
  padding: 0 50rpx;
  /* padding-bottom: 0; */
  border-radius: 10rpx;
  z-index: 999;
  height: 68vh;
  /* overflow-y: auto; */
 
  
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3)
}
.ListMessage-title{
  text-align: center;
  line-height: 70rpx;
}
.confirm-btn-wrap{
  position: absolute;
  left: 0vw;
  bottom: 0;
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  background: #fff;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;


}
.confirm-btn{
  width: 80vw;
  height: 100rpx;
  line-height: 100rpx;
  background: #e1000f;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  border-radius: 50rpx;

}
.messageList{
  height: 50vh;
  overflow-y: auto;
}
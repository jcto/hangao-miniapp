<view class="page-container">
  <view class="inbound-area pd20">
    <view class="scan-wraper">
      <input-wraper label="DN单号：" placeholder="请输入单号或扫码" bind:inputChange="changeDnNum" value="{{ DnNum }}"
        required="{{ false }}" titleWidth="140rpx">
      </input-wraper>
      <image class="right-icon" bindtap="scan" src="./../../imgs/right-scan.png"></image>
    </view>

    <view class="gutter20"></view>
    <input-wraper label="总桶数：" bind:inputChange="changeTotal" bind:onBlur="totalInputEnd" type="number"
      placeholder="请输入货桶的数目" required="{{ false }}" titleWidth="140rpx">
    </input-wraper>
    <view class="gutter20"></view>

  </view>

  <view class="info-area">
    <view class="site-area">
      <site-cell bind:tapshowStart="showStorage" bind:tapshowEnd="showendStorage" startLabel="起始地：" endLabel="目的地："
        startValue="{{ startPlaceTips }}" endValue="{{ endtPlaceTips }}"></site-cell>
    </view>
    <view class="scan-list">
      <cell label="出库时间" value="{{time}}" imgUrl="./imgs/l1.png"></cell>
    </view>
  </view>
  <view class="button-area">
    <view class="button-box">
      <van-button custom-class="to-home" custom-style="color:#333" plain type="primary" bindtap='goBack'>上一页</van-button>
      <van-button custom-class="next-step" color="#B72729;" type="primary" bindtap="next" >下一页</van-button>
    </view>
  </view>
  <footer></footer>
  <van-popup show="{{ showPopupFlag }}" bind:close="onClose" position="bottom">
    <view class="ser-tel">如无对应站点请拨打400-856-0969</view>
    <van-picker columns="{{ columns }}" toolbar-class="pick-ok-color" bind:change="onChange" show-toolbar bind:cancel="onCancel"
      bind:confirm="onConfirm"></van-picker>
  </van-popup>
  <van-popup show="{{ endPopupFlag }}" bind:close="onClose" position="bottom">
    <view class="ser-tel">如无对应站点请拨打400-856-0969</view>
    <van-picker columns="{{ columns }}" toolbar-class="pick-ok-color" bind:change="onChange" show-toolbar bind:cancel="onCancel"
      bind:confirm="onendConfirm"></van-picker>
  </van-popup>
</view>
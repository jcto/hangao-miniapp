/* pages/login/login.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 130rpx;
}



/* 表单 */
.form{
  width: 65.6%;
}

.label{
  display: inline-block;

  font-size: 28rpx;
 color: #828c96;
 text-align: center;
}

.item-wrap{
  position: relative;
  box-sizing: border-box;
  margin-bottom: 34rpx;
  height: 66rpx;
}
.item-wrap::before{
  position: absolute;
  content: "";
  top: -0rpx;
  left: 0;
  z-index: 99;
  width: 5rpx;
  height: 66rpx;
  background: #828c96;

}

.btn_login{
  margin-top: 50rpx;
  height: 66rpx;
  background: #e1000f;
  color: #fff;
  line-height: 66rpx;
  font-size: 29rpx;
  border-radius: 0;
}


.else-option{
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 26rpx;
  font-size:23rpx;
  color: #313a3d;

}

.scan{
    width:66rpx;
    height:66rpx;
    padding-top:20rpx;
}
/* 入库描述 */

.storage-info{
  box-sizing: border-box;
  padding-left: 130rpx;
  padding-top: 16rpx;
   width:100%;
  border-top:1px solid #c8c8c8;
}

.storage-container{

  display:flex;
  flex-direction: column;
  align-items: center;
  width: 65.6%;
  padding-top: 16rpx;
 
}
.storage-item{
  line-height: 64rpx;
  font-size: 32rpx;
  color: #828c96}
.storage-item-title{
  color: #828c96;
  margin-right: 20rpx;
}

.storage-item-des{
  color:#828c96 !important;
  font-weight: 400 !important
}



.label{
  padding: 0 20rpx;
}


/* components/toast/toast.wxss */
.container{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 601rpx;
  height: 261rpx;
  background: #ffffff;
  text-align: center;
  border-radius: 5rpx;
  z-index: 99999;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
    -webkit-overflow-scrolling: touch; 


}
.mask{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  border: 0;
  background: #000000;
  width: 100%;
  height: 100%;
  opacity: 0.3;
  z-index: 88
}
.title{
 font-size: 29rpx;
color: rgb(0, 0, 0);
line-height: 69rpx;


}
.content{
  font-size: 28rpx;
  color: rgb(130, 140, 150);

}
.btn{
height: 80rpx;
line-height: 80rpx;
 font-size: 30rpx;
color: rgb(225, 0, 15);
border-top: 1rpx solid #e5e5e5;
}
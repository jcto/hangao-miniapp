  padding-left: 52rpx;
  padding-right: 30rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  /* height: 232rpx; */
  border-bottom: 1rpx solid #c8c8c8;
  
}
.indent-goods-wrap{
  flex:  0 0 90rpx
}

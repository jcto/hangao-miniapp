  display: flex;
  align-items: center;
  justify-content: center;
}
.nav{
  position: fixed;
  top: 0rpx;
  width: 100vw;
  z-index: 99;
  display: flex;
  height: 92rpx;
  background: #fff;
  
  border-bottom: 1rpx solid #c8c8c8;
}

.active-item{
  
